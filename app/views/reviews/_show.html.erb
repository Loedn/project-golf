<% image_url = review.user.facebook_picture_url || review.user.photo.url || "http://placehold.it/60" %>

<div class="review-container">
  <div class="reviewer-details">
    <%= image_tag image_url, class: 'avatar-xs' %>
    <h3><%= review.user.first_name %> (<%= time_ago_in_words(review.updated_at) %>)</h3>
  </div>
  <div class="review">
    <div class="review-stars">
      <% review.rating.times do %>
        <i class="fa fa-star"></i>
          <% end %>
      <% (5 - review.rating).times do %>
        <i class="fa fa-star-o"></i>
          <% end %>
    </div>
    <div class="review-content">
      <%= review.content %>
    </div>
  </div>
</div>
