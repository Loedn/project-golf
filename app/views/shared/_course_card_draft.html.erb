<% if course.image? %>
  <% url = cl_image_path course.image, height: 300, width: 400, crop: :fill %>
<% else %>
  <% url = image_path "banner-background.png" %>
<% end %>

<div class="col-xs-12 col-sm-6 col-lg-4">
    <%= link_to course_path(course) do %>
    <div class="card2">
      <div class="card--background" style="background-image: url('<%= url %>');">
        </div>
        <div class="course-card-details">
        <h2><%= course.name %></h2>
        <div class="course-rating-badges">
          <div class="rating">
            <% if Review.where(course_id: course.id) %>
            <% average_rating = Review.where(course_id: course.id).average(:rating).to_i # average_rating == course.average_rating %>
            <% average_rating.times do %>
              <i class="fa fa-star"></i>
            <% end %>
            <% (5 - average_rating).times do  %>
              <i class="fa fa-star-o"></i>
              <% end %>
            <% end %>
          </div>
          <div class="badges-card">
            <% if course.size %>
            <div class="hexagon card-badge size-badge"></div>
            <% end %>
            <% if course.water %>
            <div class="hexagon card-badge water-badge"></div>
            <% end %>
            <% if course.sand %>
            <div class="hexagon card-badge sand-badge"></div>
            <% end %>
            <% if course.trees %>
            <div class="hexagon card-badge trees-badge"></div>
            <% end %>
            <% if course.plain %>
            <div class="hexagon card-badge plain-badge"></div>
            <% end %>
          </div>
        </div>
        <div class="flex">
          <div class="seventy-flex"></div>
          <div class="price tag tag__green">Â£ <%= course.price.to_i %>
          </div>
        </div>
        <p><i class="fa fa-map-marker"></i> <%= course.address %></p>
      </div>
    </div>
    <% end %>
</div>
