<% if course.image? %>
  <% url = cl_image_path course.image, height: 300, width: 400, crop: :fill %>
<% else %>
  <% url = image_path "banner-background.png" %>
<% end %>

<div class="col-xs-12 col-md-6 col-lg-4">
  <%= link_to course_path(course) do%>
  <div class="card course--card" style="background-image: linear-gradient(transparent, rgba(0, 0, 0, 0.5)), url(<%= url %>)">
    <div class="card--details">
    <h1><%= course.name %></h1>
      <div class="card--details__hidden">
        <p><%= course.description %></p>
        <p>14 Fieldgate st. by the way very long sentence as a matter of testing, it could be a lorem ipsum for all I know</p>
        <p>55$</p>
      </div>
    </div>
  </div>
  <% end %>
</div>
