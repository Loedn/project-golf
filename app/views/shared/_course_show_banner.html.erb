<% if course.image? %>
  <% url = cl_image_path course.image, crop: :fill %>
<% else %>
  <% url = image_path "banner-background.png" %>
<% end %>

<div class="course--banner" style="background-image: linear-gradient(transparent, rgba(0, 0, 0, 0.5)),
  url(<%= url %>);">
  <div class="course--banner__content">
    <h1><%= course.name %></h1>
  </div>


</div>
