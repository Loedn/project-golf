<table>
  <thead>
    <tr>
      <td>Hole</td>
      <td>Par</td>
      <% @event.invited_users.each do |user| %>
      <td><%= user.first_name %></td>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @course.holes.each_with_index do |hole, index| %>
      <tr>
        <th><%= index+1 %></th>
        <td><%= hole.par %></td>
        <% @event.invited_users.each do |user| %>
          <% hole_scores = user.hole_scores.where(hole_id: hole.id) %>
          <% if hole_scores.any? %>
            <% hole_scores.each do |hole_score| %>
              <td><%= hole_score.strikes %></td>
            <% end %>
          <% else %>
            <td>0</td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
