<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 text-center">
      <h1 class="text-center">Add a New Course</h1>
      <%= simple_form_for @course do |f| %>
      <%= f.input :name, label: 'Golf Club Name', placeholder: 'Name of Golf Course', error: 'Please insert name of the club' %>
      <%= f.input :address, input_html: { class: 'autocomplete_input' }, placeholder: 'Golf Course address' %>
      <%= f.input :description, placeholder: 'Please describe your golf' %>
      <%= f.input :image %>
      <%= f.input :price, as: :float %>
      <%= f.input :image_cache, as: :hidden %>
      <%= f.button :submit, class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
