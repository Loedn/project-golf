
<div class="course-show-container">

  <div class="flex">
      <div class="show--content">
        <div class="show--content__box" id="map"></div>
        <div class="show--content__box course-description">
          <%= simple_form_for @course do |f| %>
            <p>Disabled days:</p>
            <input type="checkbox" name="course[disabled_days]"> <label for="course[disabled_days]">Monday</label>
          <%= f.submit 'Edit your course description' %>
          <% end %>
        </div>
        <div class="show--content__box course-description">
          <p class="content-box--label">
            Change your description:
          </p>
          <%= simple_form_for @course, method: :patch, remote: true do |f| %>

            <textarea class="edit-description-textarea" cols=110 rows=10 type="text" value="" name="course[description]" ><%= @course.description %></textarea>
            <%= f.submit 'Edit your course description' %>
            <% end %>
        </div>
      </div>
      <%= render 'shared/course_dashboard_sidepanel', course: @course %>
  </div>
</div>

